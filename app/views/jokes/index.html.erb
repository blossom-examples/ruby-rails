<div class="w-full max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Jokes Collection</h1>
    <%= link_to "Add New Joke", new_joke_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded transition-colors" %>
  </div>

  <% if @jokes.any? %>
    <div class="grid gap-6">
      <% @jokes.each do |joke| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-start">
            <div>
              <p class="text-lg text-gray-800 mb-2"><%= joke.content %></p>
              <p class="text-sm text-gray-500">By <%= joke.author %></p>
              <p class="text-xs text-gray-400 mt-1">Category: <%= joke.category %></p>
            </div>
            <div class="flex space-x-2">
              <%= link_to "View", joke_path(joke), class: "text-blue-500 hover:text-blue-700" %>
              <%= link_to "Edit", edit_joke_path(joke), class: "text-green-500 hover:text-green-700" %>
              <%= button_to "Delete", joke_path(joke), method: :delete, class: "text-red-500 hover:text-red-700", form: { data: { turbo_confirm: "Are you sure?" } } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-6 text-center">
      <p class="text-gray-600">No jokes yet. Be the first to add one!</p>
    </div>
  <% end %>

  <div class="mt-8 text-center">
    <%= link_to "Back to Home", root_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
</div>